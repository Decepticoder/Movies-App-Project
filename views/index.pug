extends layout

block content
  a(href="/add", class="btn btn-primary mb-3") Add New Movie

  if movies.length
    each movie in movies
      .card.mb-3
        .card-body
          h4.card-title= movie.name
          p.card-text #{movie.year} | #{movie.genres} | Rating: #{movie.rating}
          a(href=`/movies/${movie.id}`, class="btn btn-info btn-sm") View
          a(href=`/movies/${movie.id}/edit`, class="btn btn-warning btn-sm") Edit
          form(action=`/movies/${movie.id}/delete`, method="POST", style="display:inline")
            button.btn.btn-danger.btn-sm(type="submit") Delete
  else
    p No movies added yet.
