doctype html
html
  head
    title Movies App
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    style.
      html, body {
        height: 100%;
      }
      body {
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1;
      }

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="/") ðŸŽ¬ Movies App
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            if currentUser
              li.nav-item
                form(action="/logout", method="POST")
                  button.btn.btn-outline-light.btn-sm(type="submit") Logout
            else
              li.nav-item
                a.nav-link.text-white(href="/login") Login
              li.nav-item
                a.nav-link.text-white(href="/register") Register

    main.container.mt-4
      block content

    footer.bg-light.text-center.text-muted.py-3.border-top
      .container
        small &copy; #{new Date().getFullYear()} Movies Web App Â· All rights reserved.
