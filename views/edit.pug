extends layout

block content
  h2 Edit Movie
  if error
    .alert.alert-danger= error
  form(action=`/movies/${movie.id}/edit`, method="POST")
    .mb-3
      label.form-label(for="name") Name
      input.form-control(type="text", name="name", value=movie.name, required)
    .mb-3
      label.form-label(for="description") Description
      textarea.form-control(name="description")= movie.description
    .mb-3
      label.form-label(for="year") Year
      input.form-control(type="number", name="year", value=movie.year, required)
    .mb-3
      label.form-label(for="genres") Genres
      input.form-control(type="text", name="genres", value=movie.genres)
    .mb-3
      label.form-label(for="rating") Rating
      input.form-control(type="number", name="rating", value=movie.rating, min="0", max="10", step="0.1")
    button.btn.btn-primary(type="submit") Save Changes
